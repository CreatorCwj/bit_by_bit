/* pages/future/future.wxss */

page {
  background-color: #eaf1f9;
}

.add-image {
  width: 121rpx;
  height: 121rpx;
  background-color: #b9d3ee;
  border-radius: 50%;
  box-sizing: border-box;
  padding: 35rpx;
  box-shadow: 0 0 5rpx #768899;
  border: 1rpx solid white;
  position: fixed;
  left: 598rpx;
  bottom: 107rpx;
}

.tip-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 35%;
}

.tip-text {
  font-size: 40rpx;
  text-align: center;
}

.tip-image {
  width: 168rpx;
  align-self: flex-end;
  margin-right: 170rpx;
  margin-top: 50rpx;
}

.tab-container {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.tab-item {
  width: 50%;
  box-sizing: border-box;
  font-size: 33rpx;
  text-align: center;
  padding: 20rpx 0 20rpx 0;
}

.divider {
  width: 100%;
  height: 7rpx;
  background-color: white;
  margin-bottom: 35rpx;
}

.float-line {
  width: 65rpx;
  height: 7rpx;
  background-color: #9ec4e4;
  position: relative;
  left: 155rpx;
}

.item-container {
  height: 102rpx;
  margin: 0 38rpx 26rpx 38rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius: 15rpx;
  align-items: center;
  position: relative;
}

.item-text {
  font-size: 32rpx;
  margin: 0 80rpx 0 80rpx;
}

.flag-view {
  font-size: 25rpx;
  color: #dfdfe7;
  transform: rotate(-45deg);
  transform-origin: 15% center;
  margin-left: 5rpx;
  font-weight: bold;
  position: absolute;
}

.flag-line {
  width: 125rpx;
  align-self: flex-end;
  position: absolute;
  height: 1rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #dfdfe7;
  transform: rotate(-45deg);
  transform-origin: left center;
  margin-left: 5rpx;
  bottom: 10rpx;
}

.add-view {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  top: 0;
}

.add-container {
  background-color: #eaf1f9;
  width: 540rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 45rpx 50rpx 23rpx 50rpx;
  position: relative;
}

.cancel-image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  right: 25rpx;
  top: 23rpx;
  background-color: #bfbfbf;
  box-sizing: border-box;
  padding: 7rpx;
}

.add-text {
  font-size: 33rpx;
  color: black;
}

.add-date {
  font-size: 28rpx;
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #9aacc4;
}

.add-first {
  margin-top: 40rpx;
}

.add-input {
  font-size: 28rpx;
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #9aacc4;
}

.add-input-ph {
  font-size: 28rpx;
  color: #afabac;
}

.add-submit {
  letter-spacing: 10rpx;
  box-shadow: 0 0 10rpx #768899;
  border: 2rpx solid white;
  border-radius: 50rpx;
  width: 80%;
  font-size: 35rpx;
  background-color: #bfd5ed;
  color: white;
  text-align: center;
  align-self: center;
  margin-top: 30rpx;
  padding: 10rpx 0rpx 10rpx 0rpx;
}