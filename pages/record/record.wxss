/* pages/record/record.wxss */

page {
  background-color: #b9d3ee;
}

.item-container {
  height: 250rpx;
  display: flex;
  flex-direction: row;
}

.date {
  font-size: 28rpx;
  text-align: center;
  margin: 50rpx 10rpx 0 20rpx;
}

.timeline-container {
  width: 26rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.line {
  height: 100%;
  width: 2rpx;
  background-color: #a4bcd4;
}

.emotion {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background-color: yellow;
  position: absolute;
  top: 50rpx;
}

.arrow {
  width: 0;
  height: 0;
  border-top: 25rpx solid transparent;
  border-right: 50rpx solid white;
  border-bottom: 25rpx solid transparent;
  margin-top: 38rpx;
}

.content-container {
  flex: 1;
  border-radius: 30rpx;
  background-color: white;
  margin: 10rpx 20rpx 10rpx 0;
}
